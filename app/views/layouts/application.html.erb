<!DOCTYPE html>
<html>
<head>
  <title>Activeadmin</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<% if user_signed_in? %>
		<div style="text-align:left; padding-top: 12px;">
			<small>Signed in as</small><br><%= link_to current_user.email, edit_user_registration_path %>
			<%= link_to "Log Out", destroy_user_session_path, :method => :delete , class:"btn btn-mini" %>
		</div>
	<% else %>
		<ul class="nav">
			<li style="border: 0px;"><%= link_to "Sign up!", new_user_registration_path , style: "color: #ff6733;" %></li>
			<li style="border: 0px;"><%= link_to "Log In", new_user_session_path , style: "color: #ff6733;" %></li>
		</ul>
	<% end %>


<% flash.each do |key, value| %>
<%= content_tag(:div, value, class: "alert alert-#{key} container") %>
<% end %>
<%= yield %>

</body>
</html>
